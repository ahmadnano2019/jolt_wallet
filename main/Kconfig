menu "Jolt Wallet Config"

    menu "I2C"
        config JOLT_I2C_MASTER_NUM
            int
            prompt "Which I2C port to use"
            default 1
            help
                Help Text Here

        config JOLT_I2C_PIN_SDA
            int
            prompt "Display SDA GPIO PIN"
            default 4
            help
                I2C Display's SDA

        config JOLT_I2C_PIN_SCL
            int
            prompt "Display SCL GPIO PIN"
            default 15
            help
                I2C Display's SCL

        config JOLT_I2C_MASTER_FREQ_HZ
            int
            prompt "Master I2C Clock Freq"
            default 800000
            help
                Help Text Here
        config JOLT_I2C_TIMEOUT_MS
            int
            prompt "I2C Timeout in milliseconds"
            default 1000
            help
                Help Text Here
    endmenu

    # TODO: Change this default to y once feature is fully programmed
    menu "CryptoMemory"
        config JOLT_CM_ENABLE
            bool
            default n
            help
                Whether or not to use AT88SC0104CA to store Mnemonic and HW
                pin attempts. If not enabled, the AT88SC0104CA is not required,
                however Jolt will then be suscepitble to infinite PIN attempts
                if the attack reads and restores the encrypted SPI Flash. With a
                sufficiently strong PIN, it'd still be infeasible to brute force
                since the PIN attempts still have to be done on-device.
    endmenu

    menu "Display"
        config JOLT_DISPLAY_BRIGHTNESS
            int
            prompt "Default display brightness"
            default 200
            help
                Value from [0-255] indicating screen brightness

        config JOLT_DISPLAY_FLIP
            bool
            prompt "Rotate the display buffer 180 degrees"
            default n
            help
                Flip everything drawn to the display; used depending on how
                your screen is mounted in your hardware setup.

        config JOLT_DISPLAY_PIN_RST
            int
            prompt "Display RST GPIO PIN"
            default 16
            help
                I2C Display's RST

        config JOLT_DISPLAY_ADDRESS
            hex
            prompt "Display I2C Address"
            default 0x78
            help
                I2C Display's Address
    endmenu

    config JOLT_DEFAULT_TIMEOUT_S
        int
        prompt "Default idle time in seconds before wiping vault from memory."
        default 300
        help
            help text here

    config JOLT_TIMEOUT_TIMEOUT_MS
        int
        prompt "Maximum number of time in milliseconds for Private Node Watchdog to wait to obtain private node mutex."
        default 1000
        help
            help text here

    choice
        prompt "Select Mnemonic Storage Method"
        config JOLT_STORE_INTERNAL
            bool "Simple mnemonic storage on SPI Flash; Unsafe against replay attacks"
        config JOLT_STORE_ATAES132A
            bool "Not Yet Implemented"
    endchoice

    menu "Console"
